var postLikeInfo = document.querySelector("[data-post='<%= @post.id %>']");
if (postLikeInfo) {
  <% if current_user.liked? @post %>
    postLikeInfo.classList.add('liked');
  <% else %>
    postLikeInfo.classList.remove('liked');
  <% end %>
  postLikeInfo.querySelector('.likes-count').innerHTML = '<%= @likes_counter %>';
}

