<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-sm-offset-12 mb-5 bg-white p-5 rounded">
      <h2 class="text-center mb-5"><strong><%= @activity.title %></strong></h2>
      <%= simple_form_for([ @activity ]) do |f| %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.input :country, input_html: { class: 'trip_country' } %>
        <%= f.input :city, input_html: { class: 'trip_city' } %>
        <%= f.input :price, as: :integer %>
        <div class="row">
          <div class="col">
            <%= f.input :start_date, as: :string, input_html: {class: "start_date_flatpickr", data: {"start-date": @departure_date}} %> <!-- pass data attributes to flatpicker.js -->
          </div>
          <div class="col">
            <%= f.input :end_date, as: :string, input_html: {class: "end_date_flatpickr", data: {"end-date": @return_date}} %> <!-- pass data attributes to flatpicker.js -->
          </div>
        </div>
        <% if  @first_activity != @activity %>
          <%= f.input :transport_type, as: :radio_buttons, collection: Activity::TRANSPORT, label: 'How do you want to get there? Please choose your tranport type.' %>
        <% end %>
        <%= f.input :url, label: 'Please enter an URL to help your mates booking this activity.' %>
        <%= f.input :photo, as: :file, required: true %>
        <%= f.submit "Save changes", class: "btn btn-travel-primary" %>
      <% end %>
      <button class="btn btn-travel-special delete-btn mt-3">Delete <%=@activity.title%></button>
      <%= link_to "",
                activity_path(@activity),
                method: :delete,
                id: "delete-link",
                class: "d-none" %>
      <hr>
      <%= link_to 'Back', trip_path(@trip), class: "btn-travel-secondary mt-2" %>

    </div>
  </div>
</div>
