<!-- activity CARD -->
  <div class="card-container mb-5">
    <!-- IMAGE & TITLE -->
    <% if activity.photo.attached? %>
      <div class="card-image d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path activity.photo.key%>');">
    <% else %>
      <div class="card-image d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/1024px-No_image_available.svg.png');">
    <% end %>
      <h1 class="badge badge-pill badge-warning" style="position: absolute; top:10px; right:10px;"><%= index + 1 %></h1>
      <h2 class="card-title"> <%=link_to activity.title, activity.url %></h2>
    </div>

  <!-- CARD INFO -->
    <div class="card-info">
      <h3 class="card-destination"><%= activity.location %></h3>
      <div class="card-bottom">
        <p class="card-description"><%= activity.description %></p>
        <div class="card-details">

          <!-- NUMBER OF NIGHTS -->
          <p class="nb-nights">From: <%= activity.start_date.strftime('%B %e') %></p>
          <p class="nb-nights">To: <%= activity.end_date.strftime('%B %e') %></p>
          <p class="nb-nights"> <strong> <%= (activity.end_date - activity.start_date).to_i %> days </strong></p>

          <!-- PRICE  -->
          <p class="price-range mt-2">$ <%= activity.price %></p>
        </div>
      </div>
    </div>
  </div>

