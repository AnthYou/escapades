<!-- activity CARD -->
  <div class="card-container mb-5">
    <!-- IMAGE & TITLE -->
    <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path activity.photo.key%>');">
      <h2 class="card-title"> <%=link_to activity.title, activity.url %></h2>
    </div>

  <!-- CARD INFO -->
    <div class="card-info">
      <h3 class="card-destination"><%= activity.location %></h3>
      <div class="card-bottom">
        <p class="card-description"><%= activity.description %></p>
        <div class="card-details">

          <!-- NUMBER OF NIGHTS -->

          <p class="nb-nights"><%= (activity.end_date - activity.start_date).to_i %> nights</p>
          <!-- PRICE  -->
          <p class="price-range">$ <%= activity.price %></p>
        </div>
      </div>
    </div>
  </div>

