<% @trips.each do |r| %>
  <h2><%= trip.title %></h2>
  <p>
    <% trip.tag_list.each do |tag| %>
      <%= link_to tag, tagged_path(tag: tag) %>
    <% end %>
  </p>
<% end %>
<div class="container">
  <h1 class="text-center mt-4">Find the trip of your dreams ðŸ¤©</h1>
  <!-- SEARCHBAR -->
  <%= form_tag trips_path, class: 'mt-5 mb-5', method: :get do %>
    <div class="d-flex align-items-center">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        style: 'border-radius: 20px; height: 50px;',
        placeholder: "Type a destination..."
      %>
      <%= button_tag(type: "submit", class: "navbar-icon-bg-orange", style: 'margin-left: -45px; border: none;') do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>

  <div class ="d-flex flex-column flex-lg-row justify-content-between pt-4">
      <%= render "shared/cards-grid", trips: @trips %>
      <div id="map"
         style="width: 100%; height: 70vh;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>

